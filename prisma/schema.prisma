// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Team {
  id       Int      @default(autoincrement()) @id
  name     String   @unique
  logoUrl  String   @unique
  homeTeam Matches[] @relation("HomeTeam")
  awayTeam Matches[] @relation("AwayTeam")
}

model Matches {
  id        Int    @default(autoincrement()) @id
  homeTeam  Team   @relation("HomeTeam", fields: [id_home], references: [id])
  awayTeam  Team   @relation("AwayTeam", fields: [id_away], references: [id])
  id_home   Int
  id_away   Int
  homeGoals Int
  awayGoals Int
  result    String
  date      String
  round     String
}

model Player {
  id       Int      @default(autoincrement()) @id
  name     String   @unique
  faceUrl  String   @unique
  nation   String
  nationUrl String
  Club      String
  ClubUrl  String
  sofaStat  Sofascore   @relation("SofaStat", fields: [id_sofascore], references: [id])
  id_sofascore Int
  fifaStat  Futhead   @relation("FifaStat", fields: [id_fifa], references: [id])
  id_fifa Int
  fmStat  Fminside   @relation("FmStat", fields: [id_fm], references: [id])
  id_fm Int
}

model Sofascore {
  id       Int      @default(autoincrement()) @id
  player   Player[] @relation("SofaStat")
  Dribbling     Int
  BeingFouled   Int
  PercentHeader Int
  PercentGround Int
  Goals         Int
  Shots         Int
  Interceptions Int
  Tackles       Int
  Clearances    Int
  Assists       Int
  KeyPasses     Int
  DangerousSituation Int
  PercentAccuracyPasses Int
}

model Futhead {
  id       Int      @default(autoincrement()) @id
  player   Player[] @relation("FifaStat")
  Overall       Int
  Pace          Int
  Shooting      Int
  Passing       Int
  Dribbling     Int
  Defense       Int
  Physical      Int
}

model Fminside {
  id         Int      @default(autoincrement()) @id
  player   Player[] @relation("FmStat")
  Overall       Int
  Pace          Int
  Shooting      Int
  Passing       Int
  Dribbling     Int
  Defense       Int
  Physical      Int
}

